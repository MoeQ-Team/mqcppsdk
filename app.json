/* 
MoeQ 的Json文件支持单行注释和多行注释
请将插件的 app.dll 和 app.json 文件放在 dev/[appid]/ 目录下
如 appid=com.moeq.demo, 则dll及json文件需分别放到 dev/com.example.demo/app.dll,dev/com.example.demo/app.json
*/
{
  "name": "MoeQ Example Plugin", // 插件名称
  "appid":"top.simplxs.example", //插件appid
  "version": "1.0.0", // 插件版本
  "author": "Simplxs", // 插件作者
  "description": "This is a plugin example", // 插件描述
  "event": [ // 事件列表(发布前请删除无用事件) 可重复定义
    {
      "type": 0, //MoeQ生命周期事件
      "function": "MQ_LifeCycleEvent", //事件对应函数
      "subevent": [
        {
          "id": 0, //MoeQ启动事件
          "priority": 2 //事件优先级(最高0 最低3)
        },
        {
          "id": 1, //MoeQ关闭事件
          "priority": 2
        },
        {
          "id": 2, //插件已被启用
          "priority": 2
        },
        {
          "id": 4, //插件将被停用
          "priority": 2
        }
      ]
    },
    {
      "type": 1, //MoeQ消息事件
      "function": "MQ_MessageEvent",
      "subevent": [
        {
          "id": 0, //私聊消息处理
          "priority": 2
        },
        {
          "id": 1, //群消息处理
          "priority": 2
        },
        {
          "id": 2, //讨论组消息处理
          "priority": 2
        }
      ]
    },
    {
      "type": 2, //MoeQ提醒事件
      "function": "MQ_NoticeEvent",
      "subevent": [
        {
          "id": 0, //群管理员变动
          "priority": 2
        },
        {
          "id": 1, //群成员数量变动
          "priority": 2
        },
        {
          "id": 2, //群禁言
          "priority": 2
        },
        {
          "id": 4, //好友已添加
          "priority": 2
        }
      ]
    },
    {
      "type": 3, //MoeQ请求事件
      "function": "MQ_RequestEvent",
      "subevent": [
        {
          "id": 0, //加好友
          "priority": 2
        },
        {
          "id": 1, //加群
          "priority": 2
        }
      ]
    }
  ],
  "menu": { // 设置菜单(发布前请删除无用菜单，如果无需设置菜单请全部删除)
    "function": "Menu",
    "caption": [
        "SettingA", //菜单名称(id 0)
        "SettingB", //id 1
        "SettingC"  //id 2
        //id 以此类推
    ]
  },
  "auth": [ // 插件权限(发布前请删除无用权限)
    //1, //[敏感]取Cookies   getCookies / getCsrfToken
    //2, //[敏感]发送赞      sendLike
    //4, //[敏感]置群退出    setGroupLeave
    //8, //[敏感]置讨论组退出 setDiscussLeave
    //16, //接收语音          getRecord
    32, //发送私聊消息       sendPrivateMsg
    64, //发送群消息         sendGroupMsg
    128, //发送讨论组消息     sendDiscussMsg
    256, //撤回消息           deleteMsg
    512, //移除群员           setGroupKick
    1024, //置群管理员         setGroupAdmin
    2048, //置群禁言           setGroupWholeBan
    4096, //置群成员名片       setGroupCard
    8192, //取群成员信息       getGroupMemberInfo
    16384, //取陌生人信息       getStrangerInfo
    32768, //取群信息           getGroupInfo
    65536, //置好友添加请求     setFriendAddRequest
    131072, //置群添加请求       setGroupAddRequest
    262144, //取好友列表         getFriendList
    524288, //取群列表           getGroupList
    1048576 //取群成员列表         getGroupMemberList
  ]
}